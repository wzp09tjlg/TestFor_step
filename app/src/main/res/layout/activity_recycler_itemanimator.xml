<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_horizonal">
    <Button
        android:id="@+id/step_btn_grid_itemAnimator_add"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_marginLeft="@dimen/dimen_200dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:gravity="center"
        android:text="@string/itemAnimator_add"
        />
    <Button
        android:id="@+id/step_btn_grid_itemAnimator_delete"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_marginLeft="@dimen/dimen_200dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_toRightOf="@+id/step_btn_grid_itemAnimator_add"
        android:gravity="center"
        android:text="@string/itemAnimator_delete"
        />
    <com.zhongxin.home.testfor_step.widget.gridview.VerticalGridView
        android:id="@+id/step_grid"
        android:layout_width="@dimen/dimen_1920dp"
        android:layout_height="@dimen/dimen_800dp"
        android:layout_below="@+id/step_btn_grid_itemAnimator_add"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:focusable="true"
        android:clickable="true"
        android:layoutAnimation="@anim/vedio_list_item_in"
        app:focusOutEnd="true"
        app:focusOutFront="true"
        app:numberOfColumns="6"
        ></com.zhongxin.home.testfor_step.widget.gridview.VerticalGridView>

    <ImageView
        android:id="@+id/step_img_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_focus"/>
</RelativeLayout>
